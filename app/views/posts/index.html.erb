<%= render 'users/navbar' %>
<%= render 'form' %>

<% @posts.each do |post| %>
  <div>
    <div>
      <p><%= link_to post.user.name, user_path(post.user) %> - <%= post.likes.count %> Likes</p>
      <p><%= post.body %></p>
    </div>
    <div>
      <% if current_user.likes? post %>
        <%= button_to "Like", post_like_path(post), method: :delete, remote: true %>
      <% else %>
        <%= button_to "Like", post_like_path(post), method: :post, remote: true %>
      <% end %>
    </div>
    <div>
      <% post.comments.each do |comment| %>
        <div>
          <p><%= link_to comment.user.name, user_path(comment.user) %><p>
          <p><%= comment.text %></p>
        </div>
      <% end %>
    </div>
    <div>
      <%= render partial: 'comments/form', locals: { post: post } %>
    </div>
  </div>
<% end %>
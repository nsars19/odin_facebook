<%= render 'users/navbar' %>
<%= render 'form' %>

<% @posts.each do |post| %>
  <div>
    <div>
      <p><%= post.user.name %> - <%= post.likes.count %> Likes</p>
      <p><%= post.body %></p>
    </div>
    <div>
      <% post.comments.each do |comment| %>
        <p><%= comment.user.name %><p>
        <p><%= comment.text %></p>
      <% end %>
    </div>
  </div>
<% end %>